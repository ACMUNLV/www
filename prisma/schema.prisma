// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  date        DateTime
  startTime   DateTime? 
  endTime     DateTime?
  description String
  location    String?
  type        EventType
}

enum EventType {
  General
  Competition
  Workshop
}
